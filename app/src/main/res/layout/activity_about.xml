<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    tools:context=".AboutActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_arrow_back_black_48dp"
                app:tint="@color/black"
                tools:ignore="InvalidId" />

            <TextView
                android:id="@+id/text_toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/about_us"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:id="@+id/text_total_amount"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"

        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/background"
        app:neomorph_shadow_color="@color/shadow_color"
        app:neomorph_highlight_color="@color/highlight">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/bhargav"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/secondary_text"
            android:layout_marginStart="@dimen/_4sdp"/>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:id="@+id/bhargav"
            android:layout_gravity="right"
            app:neomorph_shadow_color="@color/background"
            app:neomorph_background_color="@color/background"
            app:neomorph_highlight_color="@color/background"
            app:neomorph_view_type="rectangular">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bhargav Kanani"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />
            <TextView
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nER_NO 186200316049"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_15sdp" />


        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>




    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"

        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/background"
        app:neomorph_shadow_color="@color/shadow_color"
        app:neomorph_highlight_color="@color/highlight">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/sahil"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/secondary_text"
            android:layout_marginStart="@dimen/_4sdp"/>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="@dimen/_220sdp"
            android:id="@+id/sahil"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:neomorph_shadow_color="@color/background"
            app:neomorph_background_color="@color/background"
            app:neomorph_highlight_color="@color/background"
            app:neomorph_view_type="rectangular">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sahil Chotaliya"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />
            <TextView
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nER_NO 186200316018"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_15sdp" />


        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>




    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"

        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/background"
        app:neomorph_shadow_color="@color/shadow_color"
        app:neomorph_highlight_color="@color/highlight">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/kishan"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/secondary_text"
            android:layout_marginStart="@dimen/_4sdp"/>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="@dimen/_220sdp"
            android:id="@+id/kishan"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:neomorph_shadow_color="@color/background"
            app:neomorph_background_color="@color/background"
            app:neomorph_highlight_color="@color/background"
            app:neomorph_view_type="rectangular">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jejariya Kishan"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />
            <TextView
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nER_NO 176200316038"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_15sdp" />


        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>




    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"

        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/background"
        app:neomorph_shadow_color="@color/shadow_color"
        app:neomorph_highlight_color="@color/highlight">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/anil"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/secondary_text"
            android:layout_marginStart="@dimen/_4sdp"/>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="@dimen/_220sdp"
            android:id="@+id/anil"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:neomorph_shadow_color="@color/background"
            app:neomorph_background_color="@color/background"
            app:neomorph_highlight_color="@color/background"
            app:neomorph_view_type="rectangular">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parmar Anil"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />
            <TextView
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nER_NO 186200316074"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_15sdp" />


        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>




    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>




</LinearLayout>
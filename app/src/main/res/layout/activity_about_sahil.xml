<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background2"
    android:layout_height="match_parent"
    tools:context=".AboutSahil">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_arrow_back_black_48dp"
                app:tint="@color/black"
                tools:ignore="InvalidId" />



        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/devloper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55sp"
        android:text="About Devloper"
        android:textColor="#5390d9"
        android:textSize="25dp"
        android:layout_marginBottom="@dimen/_30sdp"/>

    <TextView
        android:id="@+id/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/devloper"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="Hi,"
        android:textColor="#03045e" />

    <TextView
        android:id="@+id/devname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hi"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="20dp"
        android:text="My name is Sahil Chotaliya,"
        android:textColor="#03045e" />

    <TextView
        android:id="@+id/dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/devname"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="And I'm a Student Of IT,"
        android:textColor="#03045e" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/devloper"
        android:layout_marginLeft="250dp"
        android:src="@drawable/sahil" />

    <TextView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dev"
        android:layout_centerInParent="true"
        android:layout_marginTop="50sp"
        android:text="--------------------Connect with me--------------------" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect"
        android:gravity="center"
        android:layout_marginTop="@dimen/_25sdp">

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/connect"

            android:src="@drawable/instagram" />
    </LinearLayout>

</RelativeLayout>